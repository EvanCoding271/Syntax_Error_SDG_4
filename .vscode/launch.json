            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "preLaunchTask": "Build C++",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}